{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"typeRoots": ["./src/types", "./node_modules/@types"] // Add this line if necessary
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
